<resources>



    <style name="Theme.Blako" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blako_background</item>
        <item name="colorPrimaryDark">@color/blako_background</item>
        <item name="colorAccent">@color/blako_background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="colorControlNormal">@color/blako_gray</item>
        <item name="colorControlActivated">@color/blako_background</item>
        <item name="colorControlHighlight">@color/blako_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/blako_gray</item>
        <item name="colorControlActivated">@color/blako_gray</item>
        <item name="colorControlHighlight">@color/blako_gray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:spinnerItemStyle">@style/AppTheme.SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.SpinnerDropDownItemStyle</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>

    <style name="AppTheme.SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blako_green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/blako_gray</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/blako_gray</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/blako_gray</item>
        <item name="trackTint">@color/blako_gray_low</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/blako_green</item>
        <item name="colorAccent">@color/blako_green</item>
        <item name="android:textColorSecondary">@color/blako_gray</item>
    </style>



</resources>
