<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blako_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blako_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Cliente:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/clientTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Almacen:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/wareHouseTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blako_white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Inicio:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/offerStartTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"

            android:text="Fin:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/offerEndTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blako_white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"

            android:maxLines="1"
            android:text="Check In:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/checkinTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Checkout:"
            android:textColor="@color/blako_background"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/checkoutTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/blako_background"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/blako_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/servicesTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/blako_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/blako_background"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/blako_blue_offer_light"
        android:textSize="13sp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blako_background" />

</LinearLayout>