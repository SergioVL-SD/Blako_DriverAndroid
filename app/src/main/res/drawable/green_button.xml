<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#00C853" />
      <stroke
          android:width="1dp"
          android:color="#00C853" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"

          android:right="10dp"
    />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#00C853"
          android:endColor="#00C853"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#00C853" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:right="10dp"
           />
    </shape>
  </item>
</selector>
    

